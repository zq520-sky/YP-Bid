    <!-- 日志记录 -->
    <aop:config expose-proxy="true">
        <aop:pointcut id="ctrlPt" expression="execution(* com.yuepeng.*.*.controller..*.*(..)) || execution(* com.yuepeng.*.*.*.controller..*.*(..))" />
        <aop:aspect  ref="accessLogAop" order="2" >
           <aop:around pointcut-ref="ctrlPt" method="recordLog"/>
        </aop:aspect>
    </aop:config>
    
</beans>